{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "nodeVersionHint": 16,
      "request": "launch",
      "name": "Server",
      "skipFiles": ["<node_internals>/**"],
      "runtimeArgs": [
        "--experimental-loader",
        "${workspaceFolder}/src/loader.mjs"
      ],
      "program": "${workspaceFolder}/src/server/main.ts",
      "args": ["--port=8080"],
      // TODO(fix)
      "runtimeExecutable": "/usr/local/bin/node"
    }
  ]
}
