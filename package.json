{
  "name": "@davidsouther/jiffies",
  "version": "2.0.0",
  "private": false,
  "displayName": "JEFRi Jiffies",
  "type": "module",
  "main": "./lib/cjs/",
  "module": "./lib/esm/",
  "types": "./lib/esm/index.d.ts",
  "directories": {
    "lib": "./lib/cjs"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "node": "node --experimental-loader ./src/loader.mjs",
    "start": "npm run node ./src/server/main.js",
    "test": "npm run node ./src/test.mjs",
    "ci": "node --experimental-loader ./src/loader.mjs ./src/test.mjs --mode=junit",
    "lint": "prettier . --check",
    "check": "tsc --noEmit",
    "format": "prettier . --write",
    "build": "npm run build:esm & npm run build:cjs & npm run build:css",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir lib/cjs",
    "build:css": "sass ./src/pico/pico.scss ./build/pico.css",
    "watch": "npx tsc --watch",
    "all": "npm run lint && npm run test && npm run build"
  },
  "devDependencies": {
    "@types/node": "^17.0.24",
    "typescript": "^4.7.1"
  },
  "dependencies": {
    "sass": "^1.49.9"
  }
}
