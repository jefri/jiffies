{
  "name": "@jefri/jiffies",
  "displayName": "JEFRi Jiffies",
  "type": "module",
  "scripts": {
    "node": "node --experimental-loader ./src/loader.mjs",
    "start": "npm run node ./src/server/main.js",
    "test": "node --experimental-loader ./src/loader.mjs ./src/test.mjs",
    "ci": "node --experimental-loader ./src/loader.mjs ./src/test.mjs --mode=junit",
    "lint": "npx prettier . --check",
    "check": "npx tsc --noEmit",
    "format": "npx prettier . --write",
    "build": "npx tsc --outDir ./build",
    "all": "npm run lint && npm run ci && npm run build"
  },
  "devDependencies": {
    "@types/node": "^17.0.24",
    "typescript": "^4.7.0-dev.20220408"
  }
}