    "lib": ["esnext", "DOM", "DOM.Iterable"],
    "target": "esNext",
    "module": "ES2020",
    "noEmit": true,
    "noEmitOnError": true,
    "checkJs": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "nodenext"
  },
  "include": ["jiffies/**/*", "apps/**/*", "server/**/*", "*.mjs"]
}
